# Twitter Bot System Environment Variables
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321

# Database Configuration
DATABASE_PATH=data/database.json
COOKIES_PATH=data/cookies/
ENCRYPTION_KEY=your-super-secret-encryption-key-here

# Rate Limiting Configuration
LIKE_INTERVAL_MINUTES=2
LIKE_BREAK_MINUTES=10
COMMENT_MIN_INTERVAL=10
COMMENT_MAX_INTERVAL=30
QUOTE_CYCLE_MIN=10
QUOTE_CYCLE_MAX=20
RATE_LIMIT_PAUSE_MINUTES=20

# Twitter Configuration
TWITTER_SEARCH_LIMIT=100
MAX_MENTIONS_PER_QUOTE=3

# Logging Configuration
LOG_FILE_PATH=logs/bot.log
LOG_LEVEL=INFO
MAX_LOG_SIZE_MB=10
LOG_BACKUP_COUNT=5

# System Configuration
MAX_WORKERS=50
TASK_QUEUE_SIZE=1000

# Optional: Twitter API Configuration (if using API instead of web scraping)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# TWITTER_ACCESS_TOKEN=your_twitter_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
